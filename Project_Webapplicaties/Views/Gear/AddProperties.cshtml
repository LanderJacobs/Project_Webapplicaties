@model Project_Webapplicaties.ViewModels.AddPropertiesViewModel
@{
    ViewData["View"] = "Add Properties";
}

<h1>Add Properties</h1>

<div class="container">
    <form>
        <div class="row">
            <h3>Properties</h3>
        </div>
        <div class="row">
            <div class="col-6">
                <label>Geartype</label>
            </div>
            <div class="col-6">
                <label>Rank</label>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <input type="text" asp-for="GearType" class="form-control"/>
            </div>
            <div class="col-6">
                <input type="text" asp-for="Rank" class="form-control"/>
            </div>
        </div>
        <div class="row">
            <div class="col-6">
                <button type="submit" asp-controller="Gear" asp-action="AddGearType" class="form-control btn-primary mt-2">Voeg Toe</button>
            </div>
            <div class="col-6">
                <button type="submit" asp-controller="Gear" asp-action="AddRank" class="form-control btn-primary mt-2">Voeg Toe</button>
            </div>
        </div>
        <div class="row mt-4">
            <h3>Element</h3>
        </div>
        <div class="row">
            <div class="col-4">
                <label>Element Name</label>
            </div>
            <div class="col-4">
                <label>Weakness</label>
            </div>
            <div class="col-4">
                <label>Strong against</label>
            </div>
        </div>
        <div class="row">
            <div class="col-4">
                <input type="text" asp-for="Element" class="form-control"/>
            </div>
            <div class="col-4">
                <input type="text" asp-for="WeakTo" class="form-control"/>
            </div>
            <div class="col-4">
                <input type="text" asp-for="StrongTo" class="form-control"/>
            </div>
        </div>
        <div class="row justify-content-center">
            <button type="submit" asp-controller="Gear" asp-action="AddElement" class="form-control btn-primary mt-2">Voeg Toe</button>
        </div>
    </form>
</div>